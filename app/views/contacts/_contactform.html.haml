= simple_form_for @contact do |f|
  = f.input :name, required: true
  = f.input :email, required: true
  = f.input :message, as: :text, :input_html => {rows: 10}, required: true
  .hidden
    =f.input :nickname, hint: 'Leave this field blank, its a bot catcher'
  %br
    =f.button :submit, 'Send Message', class: 'button-large button success'
