/* RGB */
$color1: rgba(135, 67, 39, 1);
$color2: rgba(142, 166, 4, 1);
$color3: rgba(245, 187, 0, 1);
$color4: rgba(236, 159, 5, 1);
$color5: rgba(191, 49, 0, 1);
$color1_t: rgba(135, 67, 39, 0.6);
$color2_t: rgba(142, 166, 4, 0.6);
$color3_t: rgba(245, 187, 0, 0.6);
$color4_t: rgba(236, 159, 5, 0.6);
$color5_t: rgba(191, 49, 0, 0.6);


body {
  font-family: "Lato", "Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif;
  color: $color2;
}
/*                        LINKS
------------------------------- */

a {
  color: $color5;
  -webkit-transition: 0.25s;
  transition: 0.25s;
}
a:hover {
  color: #ea2f10;
  text-decoration: underline;
}
a:focus {
  outline: none;
  outline: 0 auto -webkit-focus-ring-color;
  outline-offset: 0;
}
/*                HEADIGN
------------------------------- */

h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: "Lato", "Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif;
  font-weight: 400;
  color: $color1;
  line-height: 1.3;
  margin-bottom: 0.8125rem;
}

p {
  font-size: 2em;
  line-height: 1.4;
  margin-bottom: 0.8125rem;
}


@media only screen and (max-width: 40em) {
  p {
    font-size: 1rem;
  }
}

body {
  background-image: url('<%= asset_path("symphony.png") %> ');;
  background-repeat: repeat;
}

