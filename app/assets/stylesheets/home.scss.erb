/*                   DECORATION
------------------------------- */

.bottom_border {
  height: 40px;
  display: block;
  position: relative;
  -webkit-transform: rotate(-0.8deg);
  -ms-transform: rotate(-0.8deg);
  transform: rotate(-0.8deg);
  -webkit-backface-visibility: hidden;
  -ms-backface-visibility: hidden;
  backface-visibility: hidden;
  z-index: 10;
  background: none repeat scroll rgba(245, 187, 0, 1);
  bottom: 15px;
}
.top_border {
  height: 40px;
  display: block;
  position: relative;
  -webkit-transform: rotate(0.8deg);
  -ms-transform: rotate(0.8deg);
  transform: rotate(0.8deg);
  -webkit-backface-visibility: hidden;
  -ms-backface-visibility: hidden;
  backface-visibility: hidden;
  z-index: 10;
  background: none repeat scroll #34495E;
  bottom: -15px;
}

.hidden {
  display: none !important
}

